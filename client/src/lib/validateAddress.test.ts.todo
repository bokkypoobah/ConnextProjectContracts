import {expect} from 'chai'
import validateAddress from './validateAddress';

const address1 = '0x6969696969696969696969696969696969696969'
const address2 = '0x4204204204204204204204204204204204204204'

describe('validateAddress', () => {
  it('should return null for a valid address', () => {
    expect(validateAddress(address1, address2)).eq(null)
  })

  it ('should not validate same address as wallet address', () => {
    expect(validateAddress(address1, address1)).eq('Address is the same as your wallet address.')
  })

  it ('should not validate empty address', () => {
    expect(validateAddress(address1, null as any)).eq('Address cannot be empty.')
  })

  it ('should not validate invalid addresses', () => {
    expect(validateAddress(address1, 'Gucci Mane')).eq('Address is invalid.')
  })
})
