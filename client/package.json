{
  "name": "spankchain-connext-client",
  "description": "Shared code between wallet and hub",
  "version": "0.0.1",
  "main": "dist",
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/chai-subset": "^1.3.1",
    "@types/ethereumjs-util": "^5.2.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "@types/web3": "^1.0.11",
    "bn.js": "^4.11.8",
    "chai": "^4.2.0",
    "chai-subset": "^1.6.0",
    "dotenv": "^6.1.0",
    "ethjs-provider-http": "^0.1.6",
    "mocha": "^5.2.0",
    "ts-node": "^7.0.1",
    "typechain": "^0.3.8",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "bignumber.js": "^7.2.1",
    "ethereumjs-util": "^6.0.0",
    "web3": "^1.0.0-beta.36"
  },
  "engines": {
    "node": ">=9",
    "npm": ">=5"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run compile",
    "compile": "node_modules/.bin/tsc",
    "prepare": "npm run build",
    "test": "mocha -r ts-node/register/type-check \"src/**/*.test.ts\" --exit",
    "generate": "node_modules/.bin/typechain --target=web3-1.0.0 --outDir=./src/typechain/ './.yalc/contracts/build/contracts/*.json'",
    "postinstall": "rm -f node_modules/web3/index.d.ts"
  }
}
